@model IEnumerable<InventoryApp.Domain.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories (Codebook)</h1>

<p>
    <a asp-action="EditCategory" class="btn btn-primary">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
        <tr><th>Name</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@cat.Id" class="btn btn-sm btn-secondary">Edit</a>
                <form asp-action="DeleteCategory" asp-route-id="@cat.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete this category?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
