@model IEnumerable<InventoryApp.Domain.Entities.Supplier>
@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers (Codebook)</h1>

<p>
    <a asp-action="EditSupplier" class="btn btn-primary">Create New Supplier</a>
</p>

<table class="table table-striped">
    <thead>
        <tr><th>Name</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var sup in Model)
    {
        <tr>
            <td>@sup.Name</td>
            <td>
                <a asp-action="EditSupplier" asp-route-id="@sup.Id" class="btn btn-sm btn-secondary">Edit</a>
                <form asp-action="DeleteSupplier" asp-route-id="@sup.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete this supplier?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
